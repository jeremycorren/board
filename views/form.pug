extends base.pug

block content
	form(method='POST', id='create-form')
		.panel.panel-default
			.panel-heading
				input.form-control(
					type='text'
					name='task'
					id='task'
					value=card.task
					placeholder='Enter task...'
				)
			.panel-body
				.form-group
					textarea.form-control(
						type='text'
						name='description'
						id='description'
						value=card.description
						placeholder='Enter description...'
					) #{card.description}
				select.form-control(
					type='text'
					name='category'
					id='category'
					form='create-form'
					value=card.category
					placeholder='Enter category...'
				)
					option(disabled selected) Select category...
					option(value='Finance') Finance
					option(value='Bills') Bills
					option(value='Music') Music
					option(value='Code') Code
		.form-group
		button.btn.btn-success.btn-sm(
			type='submit'
			id='btn-success'
			disabled
		) Save