extends base.pug

block content
	if !cards.length
		p No cards found.
	
	each card in cards
		.media
			.media-body
				.panel.panel-default
					.panel-heading
						a(href=`/board/${card.id}/`)= card.task
					.panel-body
						p= card.description
				
						form(method='POST')
							.form-group
								input.form-control.filter-btn(
									type='text'
									name='filter'
									id='filter'
									value=card.category
								)
							.form-group
								button.btn.btn-info.btn-xs(
									type='submit'
									title='Filter cards by this category'
										)= card.category